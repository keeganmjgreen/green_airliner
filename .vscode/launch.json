    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Feasibility Study",
            "type": "debugpy",
            "request": "launch",
            "program": "src/feasibility_study/feasibility_study.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            }
        },
        {
            "name": "Viz Airliner and PIT UAV Paths",
            "type": "debugpy",
            "request": "launch",
            "program": "src/three_d_sim/viz_airplane_paths.py",
            "console": "integratedTerminal",
            "justMyCode": true,
            "env": {
                "PYTHONPATH": "${workspaceFolder}"
            },
            "args": [
                "--config-dir=configs/jfk_to_lax/",
                "--airplane-id=Airliner,PIT_UAV_*",
            ]
        },
        {
            "name": "Simulation - Map View, Record Viewport",
